{
  "name": "notejam-in-da-cloud",
  "version": "0.1.0",
  "scripts": {
    "watch": "tsc -w",
    "cdk": "cdk",
    "aws": "aws",
    "diff": "cdk diff",
    "deploy:common:dev": "run-s build clean:cdk:** \"cdk deploy NoteJamCommons -- --context environment-type=dev\"",
    "deploy:notejam:dev": "run-s build clean:cdk:** \"cdk deploy NoteJamNetwork NoteJamDataLayer NoteJamAppLayer NoteJamMonitoring -- --context environment-type=dev\"",
    "undeploy:common:dev": "run-s build clean:cdk:** \"cdk destroy NoteJamCommons -- --context environment-type=dev\"",
    "undeploy:notejam:dev": "run-s build clean:cdk:** \"cdk destroy NoteJamNetwork NoteJamDataLayer NoteJamAppLayer NoteJamMonitoring -- --context environment-type=dev\"",
    "update:notejam:dev": "aws ecs update-service --cluster NoteJamCluster --service NoteJamService --force-new-deployment",
    "synth:dev": "run-s build clean:cdk:** \"cdk synth * -- --context environment-type=dev\"",
    "build": "tsc",
    "clean:cdk:out": "rimraf cdk.out",
    "clean:cdk:lib": "rimraf cdk.lib",
    "clean:node_modules": "rimraf node_modules",
    "clean-all": "run-s clean:cdk:** clean:node_modules",
    "notejam:build": "cd notejam-app && build.sh -- ",
    "tomcat:base:build": "cd docker/tomcat-base && build.sh -- "
  },
  "devDependencies": {
    "@types/node": "12.12.13",
    "aws-cdk": "^1.35.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "^1.35.0",
    "@aws-cdk/aws-cloudwatch": "^1.35.0",
    "@aws-cdk/aws-cloudwatch-actions": "^1.35.0",
    "@aws-cdk/aws-dynamodb": "^1.35.0",
    "@aws-cdk/aws-ec2": "^1.35.0",
    "@aws-cdk/aws-ecr": "^1.35.0",
    "@aws-cdk/aws-ecs": "^1.35.0",
    "@aws-cdk/aws-ecs-patterns": "^1.35.0",
    "@aws-cdk/aws-elasticloadbalancingv2": "^1.35.0",
    "@aws-cdk/aws-iam": "^1.35.0",
    "@aws-cdk/aws-lambda": "^1.35.0",
    "@aws-cdk/aws-lambda-event-sources": "^1.35.0",
    "@aws-cdk/aws-rds": "^1.35.0",
    "@aws-cdk/aws-s3": "^1.35.0",
    "@aws-cdk/aws-s3-notifications": "^1.35.0",
    "@aws-cdk/aws-sns": "^1.35.0",
    "@aws-cdk/aws-sqs": "^1.35.0",
    "@aws-cdk/core": "^1.35.0",
    "@aws-cdk/cx-api": "^1.35.0",
    "@aws-cdk/region-info": "^1.35.0",
    "@aws-cdk/aws-cloudfront": "^1.35.0",
    "@types/aws-lambda": "^8.10.50",
    "aws-lambda": "^1.0.5",
    "aws-sdk": "^2.661.0",
    "preconditions": "^2.2.3",
    "source-map-support": "^0.5.16",
    "ts-stopwatch": "0.0.4"
  }
}
